<%# whitespace:pre on this partial %>
<%- assignment = assignment_poll -%>
<div class="poll" id="<%= dom_id(assignment) %>"><p><%= fancyname_for assignment.user %>
<%= ibm h(assignment.user.address) %>
<%= mail_to assignment.user.email, ibm(assignment.user.email), :encode => "hex" -%></p>
<%= render :partial => "account/icons", :locals => { :assignment => assignment } %>
</div>